<UserControl x:Class="TravelApp.WPF.Components.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TravelApp.WPF.Components"
             mc:Ignorable="d" 
             Height="100"
             d:DesignHeight="100" d:DesignWidth="1000" Background="#3d9fd5">
    <DockPanel LastChildFill="False">
        <Image Source ="Images/icon.png" DockPanel.Dock="Left" Height="60" Width="60" Margin="70 15 10 15"/>
        <Label Content="TravelTix" FontSize ="30" VerticalContentAlignment="Center" Foreground="#e5f4fa" />
        <Border CornerRadius="90" DockPanel.Dock = "Right" Height="60" Width="60" Margin="20">
            <Border.Background>
                <ImageBrush  Stretch="UniformToFill" ImageSource="Images/icon1.jpg"/>
            </Border.Background>
        </Border>
    </DockPanel>
</UserControl>
